{
  "name": "root",
  "description": "Build the Next Fintech Application",
  "author": "Mariano Rivas <mariano.rivas@truenorth.co>",
  "homepage": "https://github.com/truenorth-tech/mate#readme",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "boot": "yarn clean && yarn && yarn bootstrap",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "dev": "lerna run dev --parallel",
    "dev:portal": "yarn workspace @mate/portal dev",
    "dev:website": "yarn workspace @mate/website dev",
    "build": "lerna run build --no-private --stream",
    "build:portal": "yarn workspace @mate/portal build",
    "build:website": "yarn workspace @mate/website build",
    "build:storybook": "build-storybook",
    "start": "yarn build && yarn storybook",
    "start:api-json": "yarn workspace @mate/api-json start",
    "start:portal": "yarn workspace @mate/portal start",
    "start:website": "yarn workspace @mate/website start",
    "storybook": "start-storybook -p 5555",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prerelease": "yarn build",
    "release": "lerna publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-transform-runtime": "7.12.13",
    "@babel/preset-env": "7.12.13",
    "@babel/preset-flow": "7.12.13",
    "@babel/preset-react": "7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@babel/runtime": "^7.12.13",
    "@chakra-ui/react": "^1.2.1",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "@storybook/addon-a11y": "^6.1.16",
    "@storybook/addon-actions": "^6.1.16",
    "@storybook/addon-docs": "^6.1.16",
    "@storybook/addon-knobs": "^6.1.16",
    "@storybook/addon-toolbars": "^6.2.0-alpha.20",
    "@storybook/cli": "^6.1.16",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.1.16",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "framer-motion": "^3.3.0-beta.22",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "next": "^10.0.6",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "storybook-addon-performance": "^0.14.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  }
}
